<%= simple_form_for @book, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= error_span(@book[:title]) %>
  <%= f.input :author %>
  <%= error_span(@book[:author]) %>
  <%= f.input :review %>
  <%= error_span(@book[:review]) %>
  <%= f.input :description %>
  <%= error_span(@book[:description]) %>
  <%= f.input :tag_list %>
  <%= error_span(@book[:tag_list]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                books_path, :class => 'btn btn-default' %>
<% end %>

<script type="text/javascript">
  $('#book_tag_list').tagsInput(
    {'width':'100%', 'height':'auto'}
  );
</script>
